<div class="container-fluid">
    <div class="row">
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Sites</h1>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Short Name</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <form action="/secured/admin/new" method="POST">
                            <tr>
                                <td></td>
                                <td>
                                    <div class="input-control text">
                                        <input type="text" name="full-name" placeholder="Full Name">
                                    </div>
                                </td>
                                <td>
                                    <div class="input-control text">
                                        <input type="text" name="short-name" placeholder="Short Name">
                                    </div>
                                </td>
                                <td></td>
                                <td></td>
                                <td>
                                    <input class="button success" type="submit" name="operation" value="Create" />
                                </td>
                            </tr>
                        </form>
                        - @data_sites.each do |s|
                            <form action="/secured/admin/#{s.short_name}" method="POST">
                                <tr>
                                    <td>
                                        <div class="input-control number">
                                            <input type="number" name="id" readonly value="#{s.id}">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-control text">
                                            <input type="text" name="full-name" value="#{s.full_name}">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-control text">
                                            <input type="text" name="short-name" value="#{s.short_name}">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-control text">
                                            <input type="text" name="created_at" readonly value="#{s.created_at}">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-control text">
                                            <input type="text" name="updated_at" readonly value="#{s.updated_at}">
                                        </div>
                                    </td>
                                    <td>
                                        <a href="/secured/admin/#{s.short_name}" class="button primary">Details</a>
                                        <input class="button primary" type="submit" name="operation" value="Update" />
                                        <input class="button danger" type="submit" name="operation" value="Delete" />
                                    </td>
                                </tr>
                            </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>